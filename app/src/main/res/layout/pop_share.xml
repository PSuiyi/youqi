<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llParent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/dark" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/distance_view">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/line1" />

            <TextView
                style="@style/TitleTextStyle"
                android:layout_marginLeft="@dimen/distance_view"
                android:layout_marginRight="@dimen/distance_view"
                android:text="分享到" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/line2" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/distance_view"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvOpt1"
                style="@style/TextStyle"
                android:layout_weight="1"
                android:drawablePadding="8dp"
                android:drawableTop="@mipmap/weixinhaoyou"
                android:gravity="center"
                android:text="微信好友" />

            <TextView
                android:id="@+id/tvOpt2"
                style="@style/TextStyle"
                android:layout_weight="1"
                android:drawablePadding="8dp"
                android:drawableTop="@mipmap/weixinhaoyou"
                android:gravity="center"
                android:text="朋友圈" />

            <TextView
                android:id="@+id/tvOpt3"
                style="@style/TextStyle"
                android:layout_weight="1"
                android:drawablePadding="8dp"
                android:drawableTop="@mipmap/xinlangweibo"
                android:gravity="center"
                android:text="QQ好友" />

            <TextView
                android:id="@+id/tvOpt4"
                style="@style/TextStyle"
                android:layout_weight="1"
                android:drawablePadding="8dp"
                android:drawableTop="@mipmap/qqkongjian"
                android:gravity="center"
                android:text="QQ空间" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/distance_view"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvOpt5"
                style="@style/TextStyle"
                android:layout_weight="1"
                android:drawablePadding="8dp"
                android:drawableTop="@mipmap/qqhaoyou"
                android:gravity="center"
                android:text="新浪微博" />

            <TextView
                android:id="@+id/tvOpt6"
                style="@style/TextStyle"
                android:layout_weight="1"
                android:drawablePadding="8dp"
                android:drawableTop="@mipmap/fuzhilianjie"
                android:gravity="center"
                android:text="复制链接" />

            <TextView
                style="@style/TitleTextStyle"
                android:layout_weight="1"
                android:drawablePadding="8dp"
                android:drawableTop="@mipmap/xinlangweibo"
                android:gravity="center"
                android:text="QQ好友"
                android:visibility="invisible" />

            <TextView
                style="@style/TitleTextStyle"
                android:layout_weight="1"
                android:drawablePadding="8dp"
                android:drawableTop="@mipmap/qqkongjian"
                android:gravity="center"
                android:text="QQ空间"
                android:visibility="invisible" />
        </LinearLayout>

        <View style="@style/LineBoth" />

        <TextView
            android:id="@+id/tvCancel"
            style="@style/TitleTextStyle"
            android:layout_width="match_parent"
            android:gravity="center"
            android:padding="@dimen/distance_view"
            android:text="取消" />

    </LinearLayout>
</LinearLayout>