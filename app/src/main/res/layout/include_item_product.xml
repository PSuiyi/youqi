<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F6F6F6"
        android:orientation="horizontal"
        android:padding="@dimen/distance_view">

        <com.znz.compass.znzlibray.views.imageloder.HttpImageView
            android:id="@+id/ivLogo"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@mipmap/default_image_square" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/distance_view"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvProjectName"
                style="@style/TitleTextStyle"
                android:text="有限责任公司注册" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/distance_view"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvPrice"
                    style="@style/TitleRedTextStyle"
                    android:text="¥999.00" />

                <View style="@style/WeightView" />

                <TextView
                    android:id="@+id/tvCount"
                    style="@style/TextStyle"
                    android:text="x1" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>