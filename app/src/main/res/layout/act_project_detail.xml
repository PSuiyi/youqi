<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/include_common_navigation" />

    <include layout="@layout/include_common_remind" />

    <include layout="@layout/include_common_network_status" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?android:attr/selectableItemBackground"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="@dimen/distance_view">

                <com.znz.compass.znzlibray.views.imageloder.HttpImageView
                    android:id="@+id/ivImage"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:foreground="@color/gray20"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/default_image_square" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/distance_view"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvName"
                            style="@style/TitleTextStyle"
                            android:singleLine="true"
                            android:text="有鱼钓" />

                        <TextView
                            style="@style/TagStyle"
                            android:layout_marginLeft="@dimen/distance_divider"
                            android:text="天使轮" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvContent"
                        style="@style/TextGrayStyle"
                        android:layout_marginTop="@dimen/distance_text"
                        android:singleLine="true"
                        android:text="好玩有趣的钓鱼软件，同城交友，人脉扩展！" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/distance_text"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/TextStyle"
                            android:text="文化娱乐" />

                        <TextView
                            style="@style/TextStyle"
                            android:layout_marginLeft="@dimen/distance_divider"
                            android:text="休闲" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/distance_text"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/TextDrawableStyle"
                            android:drawableLeft="@mipmap/shoucangxiaohui"
                            android:text="2585"
                            android:textColor="@color/text_gray"
                            android:textSize="@dimen/text_size_12" />

                        <TextView
                            style="@style/TextDrawableStyle"
                            android:layout_marginLeft="@dimen/distance_divider"
                            android:drawableLeft="@mipmap/pinglunxiaohui"
                            android:text="2585"
                            android:textColor="@color/text_gray"
                            android:textSize="@dimen/text_size_12" />

                        <TextView
                            style="@style/TextDrawableStyle"
                            android:layout_marginLeft="@dimen/distance_divider"
                            android:drawableLeft="@mipmap/liulanxiaohui"
                            android:text="2585"
                            android:textColor="@color/text_gray"
                            android:textSize="@dimen/text_size_12" />

                        <View style="@style/WeightView" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/zhuanfa" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/distance_view"
                            android:src="@mipmap/shoucang" />

                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

        <View style="@style/LineBoth" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/distance_view">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/TitleGrayTextStyle"
                    android:text="地址：" />

                <TextView
                    style="@style/TitleTextStyle"
                    android:text="南京市建邺区路山路188号" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/distance_divider"
                android:orientation="horizontal">

                <TextView
                    style="@style/TitleGrayTextStyle"
                    android:text="状态：" />

                <TextView
                    style="@style/TitleTextStyle"
                    android:text="运营中" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/distance_divider"
                android:orientation="horizontal">

                <TextView
                    style="@style/TitleGrayTextStyle"
                    android:text="公司：" />

                <TextView
                    style="@style/TitleTextStyle"
                    android:text="江苏南京美之科信息技术有限公司" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/distance_divider"
                android:orientation="horizontal">

                <TextView
                    style="@style/TitleGrayTextStyle"
                    android:text="营业额：" />

                <TextView
                    style="@style/TitleTextStyle"
                    android:text="天使轮" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/distance_divider"
                android:orientation="horizontal">

                <TextView
                    style="@style/TitleGrayTextStyle"
                    android:text="成立时间：" />

                <TextView
                    style="@style/TitleTextStyle"
                    android:text="2017-01-17" />

            </LinearLayout>
        </LinearLayout>

        <View style="@style/LineBoth" />

        <TextView
            style="@style/TitleBlodStyle"
            android:padding="@dimen/distance_view"
            android:text="谁看过"
            android:textSize="@dimen/text_size_20" />

        <View style="@style/LineBoth" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvPeople"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/distance_view" />

        <include layout="@layout/include_more" />

        <View style="@style/LineDivider" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </LinearLayout>

    <View style="@style/Line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/nav_height"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            style="@style/MenuBottomStyle"
            android:drawableTop="@mipmap/pinlun"
            android:text="评论" />

        <TextView
            style="@style/MenuBottomStyle"
            android:drawableTop="@mipmap/zijian"
            android:text="约谈" />

        <TextView
            style="@style/MenuBottomStyle"
            android:drawableTop="@mipmap/shoucang"
            android:text="收藏" />

        <TextView
            style="@style/MenuBottomStyle"
            android:drawableTop="@mipmap/zhuanfa"
            android:text="分享" />

        <TextView
            style="@style/MenuBottomStyle"
            android:drawableTop="@mipmap/huidaodingbu"
            android:text="返回顶部" />
    </LinearLayout>

</LinearLayout>