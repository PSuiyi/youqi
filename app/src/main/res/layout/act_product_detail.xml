<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/include_common_navigation" />

    <include layout="@layout/include_common_remind" />

    <include layout="@layout/include_common_network_status" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.znz.compass.znzlibray.views.imageloder.HttpImageView
                android:id="@+id/ivImage"
                android:layout_width="match_parent"
                android:layout_height="375dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/default_image_square" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/distance_view">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvTitle"
                        style="@style/TitleTextStyle"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:text="有限责任公司注册" />

                    <View style="@style/WeightView" />

                    <ImageView
                        android:id="@+id/ivFav"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/shoucang" />
                </LinearLayout>


                <TextView
                    android:id="@+id/tvMoney"
                    style="@style/TitleTextStyle"
                    android:paddingTop="@dimen/distance_text"
                    android:text="¥999.00"
                    android:textColor="@color/red" />

                <TextView
                    android:id="@+id/tvMoneyOld"
                    style="@style/TextGrayStyle"
                    android:paddingTop="@dimen/distance_text"
                    android:text="原价：¥1000.00" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/distance_text">

                    <TextView
                        style="@style/TextRedStyle"
                        android:background="@drawable/bg_line_red_2"
                        android:paddingLeft="4dp"
                        android:paddingRight="4dp"
                        android:text="自营" />

                    <View style="@style/WeightView" />

                    <TextView
                        android:id="@+id/tvCountPayed"
                        style="@style/TextStyle"
                        android:text="成交量：192" />
                </LinearLayout>
            </LinearLayout>

            <View style="@style/LineDivider" />

            <LinearLayout
                android:id="@+id/llCity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/distance_view">

                <TextView
                    style="@style/TitleGrayTextStyle"
                    android:text="服务省市" />

                <View style="@style/WeightView" />

                <TextView
                    android:id="@+id/tvAddress"
                    style="@style/TitleTextStyle"
                    android:text="江苏省南京市" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:src="@mipmap/fanhui" />
            </LinearLayout>


            <View
                style="@style/Line"
                android:layout_marginLeft="@dimen/distance_view" />

            <LinearLayout
                android:id="@+id/llArea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/distance_view">

                <TextView
                    style="@style/TitleGrayTextStyle"
                    android:text="服务地区" />

                <View style="@style/WeightView" />

                <TextView
                    style="@style/TitleTextStyle"
                    android:text="秦淮区" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:src="@mipmap/fanhui" />
            </LinearLayout>

            <View style="@style/LineDivider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/distance_view">

                <TextView
                    style="@style/TitleGrayTextStyle"
                    android:text="数量" />

                <View style="@style/WeightView" />


                <TextView
                    style="@style/TitleTextStyle"
                    android:text="1" />

            </LinearLayout>

            <View style="@style/LineDivider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    style="@style/TitleBlodStyle"
                    android:padding="@dimen/distance_view"
                    android:text="商品介绍"
                    android:textSize="@dimen/text_size_20" />

                <View style="@style/Line" />

                <com.znz.compass.znzlibray.views.WebViewWithProgress
                    android:id="@+id/wvDetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/distance_view"
                    android:scrollbars="none" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <View style="@style/Line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvFav"
            style="@style/TextStyle"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:drawableTop="@mipmap/shoucang"
            android:gravity="center"
            android:text="收藏"
            android:textSize="@dimen/text_small_size" />

        <TextView
            android:id="@+id/tvPhone"
            style="@style/BtnStyle"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="#FF942C"
            android:text="电话咨询" />

        <TextView
            android:id="@+id/tvBuy"
            style="@style/BtnStyle"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="立即购买" />
    </LinearLayout>

</LinearLayout>