<resources>

    <style name="AppSplash" parent="AppTheme">
        <item name="android:windowBackground">@mipmap/splash</item>
    </style>

    <style name="MenuStyle" parent="TextDrawableStyle">
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:drawablePadding">4dp</item>
    </style>

    <style name="BtnStyle" parent="TitleTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/red</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">@dimen/distance_view</item>
        <item name="android:paddingRight">@dimen/distance_view</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TagStyle" parent="TextWhiteStyle">
        <item name="android:background">@drawable/bg_tag</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingLeft">3dp</item>
        <item name="android:paddingRight">3dp</item>
        <item name="android:paddingTop">0dp</item>
    </style>

    <style name="MenuBottomStyle" parent="TextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/text_size_12</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="LineEdit">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_marginLeft">6dp</item>
        <item name="android:layout_marginRight">6dp</item>
        <item name="android:background">@color/line</item>
    </style>

    <style name="DotRedStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">3dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:src">@drawable/bg_circle_red</item>
    </style>

    <style name="TagBlueStyle" parent="TextStyle">
        <item name="android:background">@drawable/bg_round_blue_2</item>
        <item name="android:paddingBottom">1dp</item>
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:paddingTop">1dp</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">12dp</item>
    </style>

    <style name="TagGrayStyle" parent="TagBlueStyle">
        <item name="android:background">@drawable/bg_round_gray_2</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="bottom_dialog" parent="android:style/Theme.Dialog">
        <!-- 设置无边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- 设置无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 设置未浮动窗口 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 设置完全透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- Dialog进入及退出动画 -->
        <item name="android:windowAnimationStyle">@style/Animation_Bottom_Dialog</item>
    </style>
    <style name="Animation_Bottom_Dialog">
        <item name="android:windowEnterAnimation">@anim/bottom_dialog_enter</item>
        <item name="android:windowExitAnimation">@anim/bottom_dialog_exit</item>
    </style>
    <style name="view_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#eaeaea</item>
    </style>
    <style name="tab">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:padding">10dp</item>
        <item name="android:text">请选择</item>
        <item name="android:textColor">@color/selector_text_color_tab</item>
        <item name="android:textSize">14sp</item>
        <item name="android:visibility">gone</item>
    </style>
</resources>
