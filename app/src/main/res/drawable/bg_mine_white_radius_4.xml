<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <padding
                android:bottom="10dp"
                android:left="1dp"
                android:right="1dp"
                android:top="1dp" />
            <corners android:radius="4dp" />
            <solid android:color="@color/gray10" />
        </shape>
    </item>
    <!-- Background -->
    <item>
        <shape>
            <solid android:color="@color/white" />
            <corners android:radius="4dp" />
        </shape>
    </item>
</layer-list>